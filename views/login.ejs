<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QBank</title>
    <link rel="stylesheet" href="css/login-regiser.css">
    <link rel="shortcut icon" type="image/png" href="/images/img/main_logo_1.png">
</head>
<body>
    <video class="body__background" style="position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;" src="/videos/alansa-bg.mp4" autoplay loop muted></video>
    <header>
        <div style="display: flex; align-items: center;">
            <img height="70px" width="70px" class="logoimg" src="/images/img/main_logo_1.png" alt="">
            <h2 class="logo">Questions Bank</h2>

        </div>    
            <!-- <marquee behavior="alternate" direction=""> -->
            <!-- </marquee> -->
        <nav class="navigation">
            <a href="/">Home</a>
            <button class="btnLogin-popup">Login</button>
        </nav>
    </header>
    
    <div class="wrapper">
        <span class="icon-close">
            <ion-icon name="close"></ion-icon>
        </span>
        <div class="form-box login">
            <h2>Login</h2>
            <form method="POST" autocomplete="off" action="/login">
                <div class="input-box">
                    <span class="icon"><ion-icon name="mail"></ion-icon></span>
                    <input type="text" name="username" required>
                    <label>Username</label>
                </div>
                <div class="input-box">
                    <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
                    <input type="password" name="password" id="" required>
                    <label for="email">Password</label>
                </div>
                <div class="remember-forgot">
                    <label><input type="checkbox">Remember me</label>
                    <a href="#">Forgot password?</a>
                </div>
                <button type="submit" class="btn" value="Login">Login</button>
                <div class="login-register">
                    <p>Don't have an account? <a href="#" class="register-link">Register</a></p>
                    <%if(error == 'logerr'){%>
                        <p style="color: red; font-size: .9em;" id="errorMessage"> Invalid Credentials</p>
                        <%}%>
                </div>
            </form>
        </div>
        <div class="form-box register">
            <h2>Resgistration</h2>
            <form id="myForm" method="POST" autocomplete="off" action="/register">
                <div class="input-box">
                    <span class="icon"><ion-icon name="person"></ion-icon></span>
                    <input type="text" id="username" name="username" required>
                    <label>Username</label>
                </div>
                <div class="input-box">
                    <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
                    <input type="password" name="password" id="password" required>
                    <label>Password</label>
                </div>
                <div class="input-box">
                    <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
                    <input type="password" name="cpassword" id="confirmPassword" required>
                    <label for="password">Confirm Password</label>
                </div>
                <div class="remember-forgot">
                    <label><input type="checkbox">I agree to the terms & conditions</label>
                    <!-- <a href="#">Forgot password?</a> -->
                </div>
                <button type="submit" class="btn">Register</button>
                <div class="login-register">
                    <p>Already have an account? <a href="#" class="login-link">Login</a></p>
                    <%if(error == 'regerr'){%>
                        <p style="color: red; font-size: .9em;" id="errorMessage"> Invalid Credential</p>
                        <%}%>
                </div>
            </form>
        </div>
    </div>
    <!-- <h1>hello</h1> -->
    <script src="/js/login.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>
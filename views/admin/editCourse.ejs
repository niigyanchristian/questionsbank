        </nav>
        <section class="home bg-black">
            <nav class="flex justify-between lg:justify-evenly align-middle items-center bg-primary border-b-2 border-primary " >
                <div class="flex items-center ">
                    <span class="toggle_1a mr-10 bg-gray-300 hover:bg-gray-400 p-2 rounded-full hidden lg:block text-3xl text-gray-800 cursor-pointer mx-2">
                        <i class='bx bx-chevron-right toggle_2'></i>
                    </span>
                    <div class="py-1 px-7 bg-primaborder-primary text-gray-100 text-xl">
                        <a href="/"><img class="w-30 h-20" src="/images/img/main_logo_1.png"></a>
                    </div>
                </div>
                <span class="toggle_1 z-[60] block lg:hidden text-3xl text-gray-800 cursor-pointer mx-2">
                    <ion-icon name="menu"></ion-icon>
                </span>
                <div class="hidden lg:flex justify-between w-1/2 transition-all ease-in duration-500">
                    <div class=" space-x-10 text-gray-100">
                        <a href="/" class="text-gray-100 font-semibold hover:text-gray-200">Home</a>
                        <a href="#courses" class="text-gray-100 font-semibold hover:text-gray-200">Courses</a>
                        <a href="#departments" class="text-gray-100 font-semibold hover:text-gray-200">Departments</a>
                    </div>
                    <div class="">
                        <!-- <a class=" mx-2" href="/register">Sign up</a>|
                        <a class=" mx-2" href="/login">Sign in</a> -->
                    </div>
                </div>           
            </nav>
            <div class="border border-gray-200 rounded mx-10 m-7">
                <div class="flex h-auto">
                    <div class=" w-full lg:w-2/3 border border-gray-200">
                        <form action="/admin/editcourse/<%=course._id%>" method="post" class="p-5">
                            <p class="text-xl text-gray-700 text-center">Add a course so you can upload past questions later</p>
                            <div class=" h-0.5 bg-gray-300 my-2 w-full"></div>
                            <div class="m-3 my-6">
                                <label class="block text-gray-700">Enter course name:</label>
                                <input class="p-3 w-2/3 rounded outline-none border border-gray-300 focus:outline-gray-500" type="text" value="<%=course.name%>"  name="name" placeholder="course name...">
                            </div>
                            <div class="m-3 my-6">
                                <label class="block text-gray-700">Enter course code:</label>
                                <input style="text-transform: uppercase" class="p-3 w-2/3 rounded outline-none border border-gray-300 focus:outline-gray-500" type="text" value="<%=course.code%>" name="code" placeholder="course code...">
                            </div>
                            <div class="select w-1/2 lg:w-5/12 ml-4 lg:ml-3 my-6 lg:my-0">
                                <select name="level" id="format">
                                   <!-- if(course.level === 'l100'){

                                   } -->
                                   <option value="l100" <%= course.level == 'l100' ? `selected` : '' %>>100</option>
                                   <option value="l200" <%= course.level == 'l200' ? `selected` : '' %>>200</option>
                                   <option value="l300" <%= course.level == 'l300' ? `selected` : '' %>>300</option>
                                   <option value="l400" <%= course.level == 'l400' ? `selected` : '' %>>400</option>
                                </select>
                            </div>

                            <div class="m-6">
                                <p class="mb-5 text-lg text-gray-700">Select Departments that study this course:</p>
                                <div class="form-group">
                                    <%if(course.cpen){%>
                                        <input type="checkbox" name="cpen" id="cpen" checked>
                                    <%}else{%>
                                        <input type="checkbox" name="cpen" id="cpen">
                                    <%}%>
                                    <label for="cpen">Computer Engineering</label>
                                </div>
                                <div class="form-group">
                                    <%if(course.biomed){%>
                                        <input type="checkbox" name="biomed" id="biomed" checked>
                                    <%}else{%>
                                        <input type="checkbox" name="biomed" id="biomed">
                                    <%}%>
                                    <label for="biomed">Biomedical Engineering</label>
                                </div>
                                <div class="form-group">
                                    <%if(course.agric){%>
                                        <input type="checkbox" name="agric" id="agric" checked>
                                    <%}else{%>
                                        <input type="checkbox" name="agric" id="agric">
                                    <%}%>
                                    
                                    <label for="agric">Agricultural Engineering</label>
                                </div>
                                <div class="form-group">
                                    <%if(course.materials){%>
                                        <input type="checkbox" name="materials" id="materials" checked>
                                    <%}else{%>
                                        <input type="checkbox" name="materials" id="materials">
                                    <%}%>
                                    
                                    <label for="materials">Material science & Engineering</label>
                                </div>
                                <div class="form-group">
                                    <%if(course.Food_Process){%>
                                        <input type="checkbox" name="Food_Process" id="Food_Process" checked>
                                    <%}else{%>
                                        <input type="checkbox" name="Food_Process" id="Food_Process">
                                    <%}%>
                                    
                                    <label for="Food_Process">Food Process Engineering</label>
                                </div>
                            </div>
                            <input class="p-2 bg-primary border border-secotext-secondary rounded m-4 cursor-pointer text-white hover:bg-secotext-secondary" value="Add course" type="submit">
                        </form>
                    </div>
                    <div class="hidden lg:block border border-gray-200 lg:w-1/3" style="background-image: linear-gradient(rgba(2, 7, 21, 0.138), rgba(6, 1, 11, 0.166)
                    ), url('/images/img/bg-main.jpg'); background-position: center; background-size: cover;"></div>
                </div>
            </div>

    
        </section>   
    </div>    
    <script src="/js/script.js"></script>
</body>
